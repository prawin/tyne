<% cache ["v1", "users", "edit", current_user] do %>
  <div class="centered">
    <%= simple_form_for(@account, :as => :account, :validate => true, :url => account_settings_path(:user => @user.username)) do |f| %>
    <table>
      <tr>
        <td><%= f.input :name %></td>
      </tr>
      <tr>
        <td><%= f.input :notification_email %></td>
      </tr>
      <tr>
        <td>
          <%= f.input :avatar %> 
          Current avatar:
          <%= image_tag @user.avatar.url, :width => '50px' %>
        </td>
      </tr>
    </table>
    <br/>
    <%= f.button :submit, :class => "btn", :value => "Save" %>
  <% end %>
  </div>
<% end %>
